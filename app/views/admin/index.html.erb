<h1> Admin Home </h1>

<pre>
Orders: <%= @orders.inspect %>
Quick Stats: <%= @quick_stats.inspect %>
Revenue by Day: <%= @revenue_by_day.inspect %>
</pre>

<div class ="flex justify-between flex-wrap mt-8 w-full items-center max-w-4xl"> 
  <h2 class="text-2xl text-gray-800 font-medium mb-4"> Daily Stats </h2>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 w-full">
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-grey-800 "> Revenue </div>
        <p class="text-grey-900 text-base">
          Ksh<%= @quick_stats[:revenue] ? (@quick_stats[:revenue]).to_s : "0" %>
          <%= debug @quick_stats %>
        </p>      
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-grey-800"> Total Sales </div>
        <p class="text-grey-900 text-base">
          <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %>
        </p>      
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-grey-800"> Average Sale </div>
        <p class="text-grey-900 text-base">
          Ksh<%= @quick_stats[:avg_sale] ? (@quick_stats[:avg_sale]).to_s : "0" %>
        </p>      
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-grey-800"> Items/Sale </div>
        <p class="text-grey-900 text-base">
          <%= @quick_stats[:per_sale] ? @quick_stats[:per_sale].to_f.round(2) : "0" %>
        </p>      
      </div>
    </div>
  </div>
</div>